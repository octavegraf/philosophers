{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug philosophers",
			"type": "lldb",
			"request": "launch",
			"program": "${workspaceFolder}/philo",
			"args": ["4", "100", "200", "200"],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"preLaunchTask": "build",
			"initCommands": [
				"settings set target.process.follow-fork-mode child",
				"settings set target.process.stop-on-exec false"
			],
			"postRunCommands": [
				"thread list"
			]
		}
	]
}